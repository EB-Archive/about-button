{
	"applications": {
		"gecko": {
			"id": "about-button@exe-boss",
			"strict_min_version": "52.0"
		}
	},

	"manifest_version":	2,
	"name":	"__MSG_extensionName__",
	"version":	"__ENV_extensionVersion__",
	"author":	"ExE Boss",
	"description":	"__MSG_description__",
	"default_locale":	"en",

	"permissions": [
		"storage"
	],
	"icons": {
		"16":	"icons/16/cog.png",
		"24":	"icons/24/cog.png",
		"32":	"icons/32/cog.png",
		"48":	"icons/48/cog.png",
		"64":	"icons/64/cog.png",
		"72":	"icons/72/cog.png",
		"96":	"icons/96/cog.png",
		"128":	"icons/128/cog.png",
		"256":	"icons/256/cog.png"
	},

	"background": {
		"scripts": [
			"shared.js",
			"background.js"
		]
	},
	"options_ui": {
		"browser_style":	true,
		"page":	"options/options.xhtml"
	},
	"browser_action": {
		"browser_style":	true,
		"default_title":	"__MSG_browserAction__",
		"default_popup":	"popup/popup.xhtml",
		"default_icon": {
			"16":	"icons/16/cog.png",
			"24":	"icons/24/cog.png",
			"32":	"icons/32/cog.png",
			"48":	"icons/48/cog.png",
			"64":	"icons/64/cog.png",
			"72":	"icons/72/cog.png",
			"96":	"icons/96/cog.png",
			"128":	"icons/128/cog.png",
			"256":	"icons/256/cog.png"
		}
	}
}
